[module/wlan]
type = internal/network
interface = wlp3s0

format-connected-padding = 1
format-disconnected-padding = 1

format-connected = <ramp-signal> <label-connected>
format-connected-underline = {colors.green}
format-disconnected-underline = ${colors.gray}

label-connected = %essid%
label-disconnected = 

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 

[module/audio_output]
type = custom/script
exec = /home/suerflowz/scripts/polybar/sound.sh
tail=true
click-left= kill -USR1 %pid%

[module/volume]
type = internal/pulseaudio
format-volume = %{A2:alacritty --title "pulsemixer_polybar" -e "pulsemixer" &:} <bar-volume> %{A}

label-volume = VOL
label-volume-foreground = ${root.foreground}

label-muted = %{A2:alacritty --title "pulsemixer_polybar" -e "pulsemixer" &:}%{F$  sound muted %{F-} %{A}
label-muted-foreground = ${colors.gray}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.yellow}
bar-volume-foreground-5 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = 
bar-volume-indicator-font = 4
bar-volume-indicator-foreground = ${colors.white}
bar-volume-fill = 
bar-volume-fill-font = 4
bar-volume-empty = 
bar-volume-empty-font = 4
bar-volume-empty-foreground = ${colors.gray}

[module/spotify]
type = custom/script
exec = ~/scripts/polybar/music.sh
tail = true
interval = 1

[module/mouse]
type = custom/script
exec = ~/scripts/polybar/mouse_battery_percentage.sh
label = %output%
tail = true
interval = 1

[module/dunst]
type=custom/ipc
initial=1
bar-width = 10

format-underline = ${colors.blue}
hook-0 = echo "%{A1:dunstctl set-paused true && polybar-msg hook dunst 2:}  %{A}" &
hook-1 = echo "%{A1:dunstctl set-paused false && polybar-msg hook dunst 1:}  %{A}" &
