[global/wm]
margin-top = 5
margin-bottom = 5

[colors]
white = #d1d1d1
gray = #585858
black = #090909
red = #c795ae
blue = #95aec7
yellow = #c7ae95
green = #aec795



[bar/Bar]
monitor = ${env:MONITOR:}
bottom = false
dock = false
wm-restack = i3
width = 100%
height = 22

enable-ipc = true

padding-left = 0
padding-right = 1

module-margin-right = 1
module-margin-left = 0

; Modules to display on the bar
modules-right = volume audio_output dunst 
modules-center = date
modules-left = i3 spotify

background = #77090909
foreground = ${colors.white}

underline-size = 2
underline-color = ${colors.white}


; Position of the system tray window
; If empty or undefined, tray support will be disabled
; NOTE: A center aligned tray will cover center aligned modules
;
; Available positions:
;   left
;   center
;   right
tray-position = undefined 

; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false

; Tray icon max size
tray-maxsize = 16

; Enable pseudo transparency
; Will automatically be enabled if a fully transparent
; background color is defined using `tray-background`
tray-transparent = true

; Background color for the tray container
; By default the tray container will use the bar
; background color.
; Note: 32 bit alpha blending is not supported.
tray-background = ${root.background}

; Tray offset defined as pixel value (e.g. 35) or percentage (e.g. 50%)
tray-offset-x = 0
tray-offset-y = 0

; Pad the sides of each tray icon
tray-padding = 0

; Scale factor for tray clients
tray-scale = 1.0

; Restack the bar window and put it above the
; selected window manager's root
;
; Fixes the issue where the bar is being drawn
; on top of fullscreen window's
;
; Currently supported WM's:
;   bspwm
;   i3 (requires: `override-redirect = true`)

override-redirect = true

 
;font-3 = FontAwesome:size=8;0
;font-2 = Noto Sans:size=12;0

font-0 = Noto Sans:size=10;0
font-1 = Font Awesome 5 Pro Regular:size=10;0
font-2 = Noto Sans Hebrew:size=10;0
font-3 = Noto Sans CJK JP:size=10;0
font-4 = FontAwesome:size=10;0
font-5 = Noto Color Emoji:scale=13

[module/i3]
type = internal/i3
format = <label-mode> <label-state>
index-sort = true

;ws-icon-0 = 1;% :2%
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-default = 

label-focused-font = 4
label-unfocused-font = 4
label-urgent-font = 4
label-visible-font = 4 

label-focused = %icon%
label-focused-underline = ${colors.white}
label-focused-padding = 4

label-unfocused = %icon%
label-unfocused-padding = 4
label-unfocused-underlinde = ${colors.white}

label-urgent = %icon%!
label-urgent-padding = 1

label-visible = %icon%
label-visible-foreground = ${colors.white}
label-visible-underline = ${colors.gray}
label-visible-padding = 4

[module/date]
type = internal/date
date-alt =   %A %H:%M 
date =   %d/%b/%y %H:%M 
interval = 5
format-underline = ${colors.white}
format-foreground = ${colors.white}
format-padding = 1

[module/audio_output]
type = custom/script
exec = /home/suerflowz/.config/polybar/sound.sh
tail=true
click-left= kill -USR1 %pid%

[module/volume]
type = internal/pulseaudio
sink = alsa_output.pci-0000_01_00.1.hdmi-stereo-extra4
format-volume = %{A2:alacritty --title "pulsemixer_polybar" -e "pulsemixer" &:} <bar-volume> %{A}

label-volume = VOL
label-volume-foreground = ${root.foreground}

label-muted = %{A2:alacritty --title "pulsemixer_polybar" -e "pulsemixer" &:}%{F${colors.white}  sound muted %{F-} %{A}
label-muted-foreground = ${colors.gray}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.yellow}
bar-volume-foreground-5 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = 
bar-volume-indicator-font = 4
bar-volume-indicator-foreground = ${colors.white}
bar-volume-fill = 
bar-volume-fill-font = 4
bar-volume-empty = 
bar-volume-empty-font = 4
bar-volume-empty-foreground = ${colors.gray}

[module/spotify]
type = custom/script
exec = ~/.config/polybar/music.sh
tail = true
interval = 1

[module/dunst]
type=custom/ipc
initial=1
bar-width = 10

format-underline = ${colors.blue}
hook-0 = echo "%{A1:dunstctl set-paused true && polybar-msg hook dunst 2:}  %{A}" &
hook-1 = echo "%{A1:dunstctl set-paused false && polybar-msg hook dunst 1:}  %{A}" &
